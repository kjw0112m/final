<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="point">
	<insert id="save" parameterType="pointDto">
		insert into point values(point_seq.nextval, #{member_id}, #{use_point}, #{current_point}, #{content}, sysdate, #{type}, #{team})
	</insert>
	
	<select id="list" parameterType="string" resultType="pointDto">
		select * from point where member_id = #{member_id}
	</select>
	
	<select id="current" parameterType="string" resultType="int">
		select current_point from(
			select current_point from point where member_id=#{member_id} order by when desc
		) where rownum = 1
	</select>
	
	<select id="getPoint" parameterType="string" resultType="int">
		select use_point from point where team=#{team}
	</select>
</mapper>